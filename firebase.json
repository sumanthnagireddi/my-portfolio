{
  "database": {
    "rules": {
      "rules": {
        ".read": true,
        ".write": false
      }
    }
  },
  "hosting": {
    "site": "sumanthnagireddi1",
    "public": "dist/my-portfolio/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
